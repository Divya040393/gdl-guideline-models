          }
        }
      },
      "gt0012": {
        "id": "gt0012",
        "model_id": "openEHR-EHR-EVALUATION.elderly_mobility_score_assesment.v0",
        "template_id": "openEHR-EHR-EVALUATION.elderly_mobility_score_assesment.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/items[at0002]"
          }
        }
      }
    },
    "rules": {
      "gt0014": {
        "id": "gt0014",
        "priority": 4,
        "when": [
          "$gt0003|Lying To Sitting|!=null",
          "$gt0004|Sitting To Lying|!=null",
          "$gt0005|Sitting To Standing|!=null",
          "$gt0006|Standing|!=null",
          "$gt0007|Gait|!=null",
          "$gt0008|Timed Walk (6 metres)|!=null",
          "$gt0009|Functional Reach|!=null"
        ],
        "then": [
          "$gt0011|EMS score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 3,
        "when": [
          "$gt0011|EMS score|>=0",
          "$gt0011|EMS score|<=9"
        ],
        "then": [
          "$gt0013|Interpretation|='Patient requires help with basic activities of daily life and is dependent of long term care.'"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 2,
        "when": [
          "$gt0011|EMS score|>=10",
          "$gt0011|EMS score|<=13"
        ],
        "then": [
          "$gt0013|Interpretation|='Patient scores borderline independence in activities of daily life. He/she requires some degree of help with mobility related manoeuvres.'"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 1,
        "when": [
          "$gt0011|EMS score|>=14",
          "$gt0011|EMS score|<=20"
        ],
        "then": [
          "$gt0013|Interpretation|='Patient is independent in basic activities of daily life. He/she may require some help but is generally safe alone at home.'"
        ]
      }
    }
  },
