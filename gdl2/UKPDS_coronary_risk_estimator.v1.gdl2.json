    "pre_conditions": [
      "$gt0003|Diabetes Mellitus|==1|local::at0008|Yes|"
    ],
    "rules": {
      "gt0018": {
        "id": "gt0018",
        "priority": 5,
        "when": [
          "$gt0005|Gender, Age|!=null",
          "$gt0006|Diabetes duration|!=null",
          "$gt0007|Smoking status|!=null",
          "$gt0008|HbA1c|!=null",
          "$gt0009|Systolic BP|!=null",
          "$gt0010|Total cholesterol/HDL|!=null",
          "$gt0011|Microalbumin|!=null"
        ],
        "then": [
          "$gt0013|UKPDS score|.magnitude=$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value+$gt0011.value"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 4,
        "when": [
          "$gt0013|UKPDS score|<=17"
        ],
        "then": [
          "$gt0020|Risk category text|=$gt0021.term",
          "$gt0028|Probability text|=$gt0029.term"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 3,
        "when": [
          "$gt0013|UKPDS score|>=18",
          "$gt0013|UKPDS score|<=31"
        ],
        "then": [
          "$gt0020|Risk category text|=$gt0023.term",
          "$gt0028|Probability text|=$gt0030.term"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 2,
        "when": [
          "$gt0013|UKPDS score|>=32"
        ],
        "then": [
          "$gt0020|Risk category text|=$gt0025.term",
          "$gt0028|Probability text|=$gt0031.term"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 1,
        "when": [
          "(fired($gt0019))||((fired($gt0022))||(fired($gt0024)))"
        ],
        "then": [
          "$gt0015|CHD Risk|.value=$gt0020",
          "$gt0017|Probability of developing CHD in the next 10 years|.value=$gt0028"
        ]
      }
    }
  },
