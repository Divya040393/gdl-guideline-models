concept
	[at0000]	-- Four level pulmonary embolism clinical probability score
language
	original_language = <[ISO_639-1::en]>
description
	original_author = <
		["name"] = <"Mouna Ghannam">
		["email"] = <"munaghannam@me.com">
		["organisation"] = <"Cambio CDS">
		["date"] = <"2021-0-15">
	>
	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To interpret the 4-level pulmonary embolism clinical probability total score of by giving what is the clinical probability of Pulmoanry embolism for the patient and if the diagnosis can be rules out without imaging.">
			use = <"Used to  interpret the 4-level pulmonary embolism clinical probability total score. If the 4PEPS score <0: PE is ruled out, if 4PEPS score is from 0 to 5: PE can be ruled out if D-dimer level <1.0 mcg/ml, if 4PEPS score is from 6 to 12:PE can be ruled out if D-dimer level <0.5 mcg/ml OR <(age x 0.01) mcg/ml, and if 4PEPS score is 13 or more: PE cannot be ruled out without imaging testing.">
			keywords = <"4PEPS", "4-level", "pulmonary", "embolism", "clinical", "probability", "score">
			misuse = <"">
			copyright = <"©Cambio CDS">
		>
	>
	lifecycle_state = <"AuthorDraft">
	other_contributors = <>
	other_details = <
		["references"] = <"Roy PM, Friou E, Germeau B, Douillet D, Kline JA, Righini M, Le Gal G, Moumneh T, Penaloza A. Derivation and Validation of a 4-Level Clinical Pretest Probability Score for Suspected Pulmonary Embolism to Safely Decrease Imaging Testing. JAMA Cardiol. 2021 Jun 1;6(6):669-677. doi: 10.1001/jamacardio.2021.0064. PMID: 33656522; PMCID: PMC7931139.">
		["MD5-CAM-1.0.1"] = <"EA9D5AB0410B70C250A1BB7E0EB8E3AB">
	>

definition
	EVALUATION[at0000] matches {	-- Four level pulmonary embolism clinical probability score
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0018] occurrences matches {0..1} matches {	-- Clinical probabilty of PE
						value matches {
							1|[local::at0019], 	-- Very low CPP (<2%)
							2|[local::at0020], 	-- Low CPP (2-20%)
							3|[local::at0021], 	-- Moderate CPP (20-65%)
							4|[local::at0022]  	-- High CPP (>65%)
						}
					}
					ELEMENT[at0023] occurrences matches {0..1} matches {	-- PE diagnosis
						value matches {
							1|[local::at0024], 	-- PE can be ruled out
							2|[local::at0025], 	-- PE can be ruled out if D-dimer level <1.0 μg/mL
							3|[local::at0027], 	-- PE can be ruled out if D-dimer level <0.5 μg/mL OR <(age x 0.01) μg/mL
							4|[local::at0028]  	-- PE cannot be ruled out without imaging testing
						}
					}
				}
			}
		}
	}

