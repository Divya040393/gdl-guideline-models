	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the clinical interpretation of the 4-PEP total score .">
			use = <"Use to record the clinical interpretation of the 4-PEP total score  
- if the 4PEPS<0, PE is ruled out
- if 4PEPS is from 0 to 5, PE can be ruled out if D-dimer level <1.0 mcg/ml
- if 4PEPS is from 6 to 12, PE can be ruled out if D-dimer level <0.5 mcg/ml OR <(age x 0.01) mcg/ml
- if 4PEPS score >or= 13, PE cannot be ruled out without imaging testing.">
			keywords = <"4PEPS", "4-level", "pulmonary", "embolism", "clinical", "probability", "score">
			misuse = <"">
